#!/bin/sh

GIT=`which git`

if [ "$1" = "github" ]
then
    echo "Switching git acc to github public email."
    ${GIT} config user.email <someautogeneratedemail>@users.noreply.github.com
elif [ "$1" = "gitlab" ]
then
    echo "Switching git acc to gitlab public email."
    ${GIT} config user.email <someautogeneratedemail>@users.noreply.gitlab.com
elif [ "$1" = "private" ]
then
    echo "Switching git acc to private email."
   ${GIT} config user.email <privateemail>@<someemail>.com
else
   echo "Please provide acc to switch to."
   echo "Current acc: "
   ${GIT} config user.email
fi
